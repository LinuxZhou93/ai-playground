    <script>
        const { createApp, ref, onMounted, computed } = Vue;

        createApp({
            setup() {
                const loading = ref(true);
                const projects = ref([]);

                // 只显示有 project_url 的可运行项目
                const runnableProjects = computed(() => {
                    return projects.value.filter(p => p.project_url && p.project_url.trim() !== '');
                });

                const fetchProjects = async () => {
                    loading.value = true;
                    try {
                        if (window.ProjectStorage) {
                            if (window.ProjectStorage.seedDemoData) {
                                ProjectStorage.seedDemoData();
                            }
                            projects.value = ProjectStorage.getAllProjects();
                            console.log('Total projects:', projects.value.length);
                            console.log('Runnable projects:', runnableProjects.value.length);
                        }
                    } catch (e) {
                        console.error("Fetch error", e);
                    } finally {
                        loading.value = false;
                    }
                };

                const playProject = (project) => {
                    if (!project.project_url) {
                        console.error('Project has no URL:', project);
                        return;
                    }
                    // 跳转到编辑器并加载项目
                    window.location.href = `ide-scratch.html?project_url=${encodeURIComponent(project.project_url)}&id=${project.id}`;
                };

                onMounted(async () => {
                    if (typeof init3DScene === 'function') init3DScene();
                    await fetchProjects();
                });

                return { loading, projects, runnableProjects, playProject };
            }
        }).mount('#app');
    </script>

